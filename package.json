{
  "name": "vself-dao",
  "version": "1.0.0",
  "description": "Source of truth for vSelf DAO root contracts / CLI",
  "main": "service.js",
  "repository": "git@github.com:vself-project/vself-dao.git",
  "author": "ilerik",
  "license": "MIT",
  "scripts": {
    "start": "node service.js",
    "pow:build:release": "node contracts/pow/compile.js",
    "pow:build:debug": "node contracts/pow/compile.js --debug",
    "pow:dev:build_and_deploy": "yarn contract:build:release && rm -rf neardev && near dev-deploy contracts/target/wasm32-unknown-unknown/release/pow_contract.wasm && env-cmd -f ./neardev/dev-account.env node contracts/pow/init.js",
    "nft-reward:build:release": "node contracts/nft-reward/compile.js",
    "contract:deploy:testnet": "env-cmd -f ./config/testnet-account.env node contracts/deploy.testnet.js",
    "contract:test:testnet": "env-cmd -f ./config/testnet-account.env node contracts/test.js",
    "contract:upload:evidences": "env-cmd -f ./config/testnet-account.env node contracts/upload_evidences.js"
  },
  "dependencies": {
    "express": "^4.17.3",
    "gun": "^0.2020.1236",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0"
  }
}
